.container {
  padding: 20rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-tip text {
  color: #999;
  margin-top: 20rpx;
}

/* 历史页专属样式 */
.memo-card {
  margin: 20rpx 0;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.memo-card .time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.memo-card .content {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.category-tag {
  background: #ffd9e6;
  color: rgb(114, 83, 109);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: inline-block;
}

/* 待办页专属样式 */
.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 10rpx 0;
  background: white;
}