.container {
  padding: 20rpx;
}

.category-section {
  margin-bottom: 40rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(241, 169, 180);
  margin-bottom: 20rpx;
  display: block;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-tip text {
  color: #999;
  margin-top: 20rpx;
}

/* 历史页专属样式 */
.memo-card {
  margin: 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 12rpx;
}
.category-tag {
  background: #ffd9e6;
  color: rgb(114, 83, 109);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 待办页专属样式 */
.todo-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 10rpx 0;
  background: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.todo-item text {
  margin-left: 20rpx;
  flex: 1;
  color: #b3879a;
}